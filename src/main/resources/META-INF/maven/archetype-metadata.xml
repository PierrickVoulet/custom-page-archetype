<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
    name="rest-api-sql-datasource" xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
			<directory>src/templates</directory>
		</fileSet>
    </fileSets>
    <requiredProperties>
        <requiredProperty key="bonitaVersion">
            <defaultValue>7.1.0</defaultValue>
        </requiredProperty>
        <requiredProperty key="customPageDisplayName">
            <defaultValue>My Custom Page</defaultValue>
        </requiredProperty>
        <requiredProperty key="customPageName">
            <defaultValue>myCustomPage</defaultValue>
        </requiredProperty>
        <requiredProperty key="customPageDesc">
            <defaultValue>My Custom Page description</defaultValue>
        </requiredProperty>
         <requiredProperty key="pathTemplate">
            <defaultValue>myCustomPage</defaultValue>
        </requiredProperty>
        <requiredProperty key="permissionNames">
            <defaultValue>case_start</defaultValue>
        </requiredProperty>
        <requiredProperty key="urlParameters">
            <defaultValue>!</defaultValue>
        </requiredProperty>
    </requiredProperties>
</archetype-descriptor>
